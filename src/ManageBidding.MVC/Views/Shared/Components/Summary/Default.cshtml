@if (ViewData.ModelState.ErrorCount > 0)
{
    <div style="padding-top: 15px"></div>

    <div class="alert alert-danger">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h3>Opa! Algo deu errado :(</h3>
        <div style="padding-top: 20px" asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
}

@if (!string.IsNullOrEmpty(ViewBag.Success))
{
    <div style="padding-top: 15px"></div>

    <div id="msg-box" class="alert alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h3 id="msg-return">@ViewBag.Success</h3>
    </div>
}

@if (TempData["Success"] != null)
{
    <div style="padding-top: 15px"></div>

    <div id="msg-box" class="alert alert-success">
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        <h4 id="msg-return">@Html.Raw(TempData["Success"]?.ToString())</h4>
    </div>
}