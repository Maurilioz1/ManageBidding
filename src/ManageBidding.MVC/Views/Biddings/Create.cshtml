@using ManageBidding.Core.DomainObjects.Enums
@model ManageBidding.Application.ViewModels.BiddingViewModel

@{
    ViewData["Title"] = "Nova licitação";
}

<link rel="stylesheet" href="~/css/bidding/create.css" asp-append-version="true" />

<h1 class="title-page">@ViewData["Title"]</h1>
<hr />

<form asp-action="Create" class="form-create-bidding">
    <vc:Summary></vc:Summary>

    <div class="form-group">
        <label asp-for="Description" class="control-label">Descrição</label>
        <textarea asp-for="Description" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Status" class="control-label"></label>
        <select asp-for="Status" class="form-control" asp-items="Html.GetEnumSelectList<EStatus>()"></select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Registrar" class="btn button" />
        <a class="btn button" asp-action="Index">Voltar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}