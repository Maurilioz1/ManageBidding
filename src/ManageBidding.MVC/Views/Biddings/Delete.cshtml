@using ManageBidding.MVC.Extensions
@model ManageBidding.Application.ViewModels.BiddingViewModel

@{
    ViewData["Title"] = "Deletar licitação";
}

<link rel="stylesheet" href="~/css/bidding/delete.css" asp-append-version="true" />

<h1 class="title-page">@ViewData["Title"]</h1>
<hr />

<h3>Você tem certeza que quer deletar esta licitação?</h3>

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayName("Número")
    </dt>
    <dd class="col-sm-10">
        @this.FormarBiddingNumber(Model.Number)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Descrição")
    </dt>
    <dd class="col-sm-10 description-value">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Data de abertura")
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RegistrationDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
</dl>

<form asp-action="Delete" class="form-bidding-delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Deletar" class="btn button-delete" />
    <a class="btn button" href="javascript:window.history.back()">Voltar</a>
</form>