@using ManageBidding.MVC.Extensions
@model ManageBidding.Application.ViewModels.BiddingViewModel

@{
    ViewData["Title"] = "Detalhes da licitação";
}

<link rel="stylesheet" href="~/css/bidding/details.css" asp-append-version="true" />

<h1>@ViewData["Title"]</h1>
<hr />

<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayName("Número")
    </dt>
    <dd class="col-sm-10">
        @this.FormarBiddingNumber(Model.Number)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Descrição")
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Description)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayName("Data de abertura")
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.RegistrationDate)
    </dd>
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Status)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Status)
    </dd>
</dl>


<a class="btn btn-warning button" asp-action="Update" asp-route-id="@Model.Id">Atualizar</a>
<a class="btn btn-info button" href="javascript:window.history.back()">Voltar</a>